@model SuperheroManager.Web.Controllers.LoginViewModel

@{
    ViewBag.Title = "LoginView";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Login</h2>

<p>
  Don't you have user account? Register @Html.ActionLink("here", "Register", "Account").
</p>

@using (Html.BeginForm())
{
  <div class="form-group">
    <label class="control-label">User</label>
    @Html.TextBoxFor(model => model.UserName, new {@class = "form-control", placeholder = "Please type your user name here ..."})
    <div class="text-danger">
      @Html.ValidationMessageFor(model => model.UserName)
    </div>
  </div>

  <div class="form-group">
    <label class="control-label">Password</label>
    @Html.PasswordFor(model => model.Password, new {@class = "form-control", placeholder = "Please type your password here ..."})
    <div class="text-danger">
      @Html.ValidationMessageFor(model => model.Password)
    </div>
  </div>

  <div class="pull-right">
    <input type="submit" value="Login" class="btn btn-primary"/>
  </div>
}