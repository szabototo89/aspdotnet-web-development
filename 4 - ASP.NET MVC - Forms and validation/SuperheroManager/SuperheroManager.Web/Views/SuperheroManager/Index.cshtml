@using SuperheroManager.Web.Utilities

@model SuperheroManager.Web.Controllers.SuperheroViewModel

@{ ViewBag.Title = "Index"; Layout = "~/Views/_Layout.cshtml"; }

<h2>Superhero Manager <small>Create a new superhero</small></h2>

@using (Html.BeginForm("Index", "SuperheroManager", FormMethod.Post))
{

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        @Html.TextBoxFor(model => model.Name, new
        {
          @class = "form-control",
          placeholder = "Type your superhero name here ...",
          id = "name"
        })
      </div>

      <div class="row">
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            <label for="skillName" class="control-label">
              New skill
            </label>

            @Html.TextBoxFor(model => model.NewSkill, new
            {
              @class = "form-control",
              placeholder = "Type your superhero skill here",
              id = "skillName"
            })
          </div>

          <div class="text-right">
            <input type="submit" name="submitType" value="Add skill" class="btn btn-sm btn-primary"/>
            <input type="submit" name="submitType" value="Remove selected skill" class="btn btn-sm btn-danger" />
          </div>

        </div>
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            <label for="">Skills</label>

            @Html.HiddenFor(model => model.Skills)

            @Html.ListBoxFor(model => model.SelectedSkill, SkillExtensions.DeserializeSkills(Model.Skills).Select(skill => new SelectListItem
            {
              Text = skill,
              Value = skill
            }), new
            {
              size = 5,
              @class = "form-control",
              multiple = "none"
            })
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            <label for="currentTeams" class="control-label">Current teams</label>
            <select id="currentTeams" size="5" class="form-control"></select>
          </div>
        </div>

        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            <label for="availableTeams" class="control-label">Available teams</label>
            <select id="availableTeams" size="5" class="form-control"></select>
          </div>
        </div>

        <div class="col-sm-12">
          <div class="text-right">
            <a href="#" class="btn btn-default btn-sm">Add team</a>
            <a href="#" class="btn btn-danger btn-sm">Remove team</a>
          </div>
        </div>

      </div>

    </div>
  </div>

  <div class="text-right">
    <a href="#" class="btn btn-primary">Create superhero</a>
    <a href="@Url.Action("Index")" class="btn btn-warning">Clear data</a>
  </div>
}